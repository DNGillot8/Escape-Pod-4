#include "Card.h"
#include <iostream>
#include <vector>
using namespace std;

class cardLocation{
public:
	bool isValidMove() // so that all classes have access to this function
private:
	vector<Card> cards;
};

class Column: public cardLocation{
public:
	Card getTop();
	Card getBottom();
};


class Player: public cardLocation{
public:
	void showHand();
	void place(Card crd, Column clmn); // places a card on a column
	void place(Column clmn1, Column clmn2); // places a column on another column
private:
	vector<Card> hand; // do we need this if Player inherits cards vector from cardLocation?
};

class Board{
public:
private:
	Column upperLeft, upperRight, lowerLeft, lowerRight;
	Column top, left, right, bottom;
	void clearColumn(int id); // Valid IDs are 0-8, in order of the above
};

class Game{
public:
private:

};
